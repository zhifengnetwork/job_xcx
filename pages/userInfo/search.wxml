<!--pages/userInfo/search.wxml-->
<view class='search-wrap'>

  <view class='g-header-'>
    <view class='-header-cont'>
      <view class='search-cont'>
        <input type='text' class='search'  placeholder="输入所要查找的内容" />
        <image class="search-icon" src='../../static/images/public/search_icon.png'></image>
      </view>
      <navigator url='../login/login' redirect><text class='login_tab'>搜索</text></navigator>
    </view>
    <view class='subtitle overH'>
        <text bindtap='changStatus' data-status="0">公司</text>
        <text bindtap='changStatus' data-status="1">第三方</text>
    </view>
  </view>


  <view class='inner inner-cont'>
      <view wx:if="{{cStatus==0}}">
          <navigator url="../company/postionDetail" class='c-l-info'>
              <image src='../../static/images/public/c_logo.jpg'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>皮革厂包装人员</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>月薪1500元</text>
                  <text class='c-msg2'>1年以上</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>公司</text>
                  <view class='company-status'>无需证书</view>
              </view>
          </navigator>
      </view>

      <view wx:if="{{cStatus==1}}">
          <navigator url="../company/postionDetail" class='c-l-info'>
              <image src='../../static/images/public/c_logo.jpg'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>皮革厂包装人员</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>月薪1500元</text>
                  <text class='c-msg2'>1年以上</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>第三方</text>
                  <view class='company-status'>无需证书</view>
              </view>
          </navigator>
          <navigator url="../company/postionDetail" class='c-l-info'>
              <image src='../../static/images/public/c_logo.jpg'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>皮革厂包装人员</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>月薪1500元</text>
                  <text class='c-msg2'>1年以上</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>第三方</text>
                  <view class='company-status'>无需证书</view>
              </view>
          </navigator>

      </view>
  </view>

</view>
