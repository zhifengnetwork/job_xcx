/* pages/userInfo/gold.wxss */
.inner{
  padding: 40rpx 24rpx;
  font-size: 26rpx;
}
.gold-search{
   width: 100%;
   height:54rpx;
   border-bottom: 1px solid #fff;
   color: #717171;
}
.gold-content{
  padding:  15rpx 0;
  display: flex;
  flex-wrap: wrap
}
.gold-list{
  margin:0 20rpx 20rpx 0;
  flex: 0 0 30.7%;
  text-align: center;
  padding: 15rpx 0;
  border:2rpx solid #25bbb3;
  border-radius:6rpx;
  position: relative;
}
.gold-list:nth-child(3n){
  margin-right: 0;
}
.gold-num{
  color:#25bbb3;
  font-weight: bold;
  font-size:30rpx;
  margin-bottom: 13rpx;
}
.gold-list{
  color:#151515;
}
.gold-active-img{
  position: absolute;
  right: 0;
  bottom: 0;
  width:41rpx;
  height: 31rpx;
  display: none
}
.gold-list:hover .gold-active-img{
  display: block;
}
.foot-info{
  position: fixed;
  bottom: 35rpx;
  left:24rpx;
  text-align: center
}
.foot-info text{
  font-size: 36rpx;

}
.foot-info .set-option{
  margin-top: 40rpx;
  width: 670rpx;
  height: 90rpx;
  line-height: 90rpx;
  border-radius: 45rpx;
  color:#fff;
  background: #25bbb3;
  font-size: 30rpx;
}