<view class='g-header-'>
  <view class='-header-cont'>
    <view class='search-cont'>
      <input type='text' class='search {{tInfo.clas}}' placeholder="输入所要查找的内容" />
      <image class="search-icon" src='../../../static/images/public/search_icon.png'></image>
    </view>
    <text class='search-r-text'>地点</text>
    <navigator url='../company/cUserInfo'><text class='search-r-text'></text></navigator>
  
  </view>
  <view class='subtitle overH'>
      <!-- <text>选择地点</text> -->
      <!-- <text>选择人才</text> -->
  </view>
</view>

<view class='header-heigh'></view>
<!-- HEADER END -->
<view class='inner'>
    <view class='container'>
        <view class='content-list'>
          <navigator url="postionDetail">
              <view class='c-title'>
                <image src='../../../static/images/public/flame_icon.png' class='c-flame'/>
                <text>热门推荐</text>
              </view>
          </navigator>
          <navigator url="../postionDetail/postionDetail?id={{item.id}}" wx:for="{{recList.recruit_hot}}">
            <view class='c-l-info'>
              <image src='{{item.logo}}'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>{{item.title}}</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>月薪{{item.salary}}K</text>
                  <text class='c-msg2'>{{item.work_age}}年以上</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>公司</text>
                  <view class='company-status'>
                      <text wx:if="{{item.require_cert==0}}">无需证书</text>
                      <text wx:if="{{item.require_cert==1}}">需要证书</text>
                  </view>
              </view>
            </view>
          </navigator>
          <navigator url="../../recruitHot/recruitHot?regtype=1" class='more-recommond'>更多推荐</navigator>
        </view>
        <view class='content-list'>
            <view class='c-title'>
              <image src='../../../static/images/public/money.png' class='c-flame'/>
              <text>待遇更好</text>
            </view>
            <navigator url="../postionDetail/postionDetail?id={{item.id}}" wx:for="{{recList.recruit_better}}">
              <view class='c-l-info'>
                  <image src='{{item.logo}}'class="c-logo" />
                  <view class='c-info-text'>
                    <text class='c-info-title'>{{item.title}}</text>
                    <view class='c-info-msg'>
                      <text class='c-msg'>月薪{{item.salary}}k</text>
                      <text class='c-msg2'>{{item.word_age}}</text>
                    </view>
                  </view>
                  <!-- company info start -->
                  <view class='company-info'>
                      <text>公司</text>
                      <view class='company-status'>
                          <text wx:if="{{item.require_cert==0}}">无需证书</text>
                          <text wx:if="{{item.require_cert==1}}">需要证书</text>
                      </view>
                  </view>
              </view>
            </navigator>
            <view class='more-recommond'>更多推荐</view>
        </view>
    </view>
</view>

