
<!-- HEADER START -->
<view class='g-header-'>
   <navigator url='../../search/sCompany' class='comp-cont s-nosearch-wrap'>
      <view class='search search-nosearch user-bColor-1'>
          <image class="search-icon" src='../../../static/images/public/search_icon.png'></image>
          输入所要查找的内容
      </view>
    </navigator>
  <!-- 地址选择 -->
  <view class='subtitle overH search-subtitle'>
    <view class="newsite_box">
      <!-- 所在地区点击按钮 -->
        <view class="newsite_button" bindtap="selectDistrict">
          <view class="newsite_view" wx:if="{{showTST}}">选择地点</view>
          <view class="newsite_city {{showTST?'':'user-color-'}}">{{areaInfo}} <icon class="iconfont icon-zhcc_xiangxiajiantou"></icon></view>
        </view>
      <!-- 所有城市三级联动列表 -->
      <include src="../../template/address"/> 
      <!-- 城市三级联动结束 -->
    </view>
  </view> 
  <!-- 地址选择结束 -->
</view>

<view class='header-heigh'></view>
<!-- HEADER END -->
<view class='inner'>
    <view class='container'>
        <view class='content-list'>
          <view class='c-title'>
            <image src='../../../static/images/public/flame_icon.png' class='c-flame'/>
            <text>最新推荐</text>
          </view>
          <navigator url="../../postionDetail/postionDetail?id={{item.id}}" wx:for="{{recList.recruit_hot}}" wx:key>
            <view class='c-l-info'>
              <image src='{{item.logo}}'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>{{item.title}}</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>月薪{{item.salary}}</text>
                  <text class='c-msg2'>{{item.work_age}}年以上</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>企业</text>
                  <view class='company-status'>
                      <text wx:if="{{item.require_cert==0}}">无需证书</text>
                      <text wx:if="{{item.require_cert==1}}">需要证书</text>
                  </view>
              </view>
            </view>
          </navigator>
          <navigator url="../../recruitHot/recruitHot?regtype=1" class='more-recommond'>更多推荐</navigator>
        </view>
