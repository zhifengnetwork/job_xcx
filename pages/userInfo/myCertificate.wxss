/* pages/userInfo/myCertificate.wxss */
@import "../template/common";
.idPic{
  width: 100%;
  height: auto;
  font-size:28rpx;
  color: #151515;
}
.-pic-subtitle{
  margin: 20rpx 0 28rpx;
  text-align: center;
}
.-pic-stat{
  width: 17rpx;
  height: 21rpx;
}
.id-card-top,.id-card-bottom{
  width:500rpx;
  height: 260rpx;
  margin: 30rpx auto;
  position: relative;
  background:#dadada;
  border-radius: 10rpx; 
}
.id-card-top image:first-child,
.id-card-bottom image:first-child{
    width:500rpx;
    height: 260rpx;
    position: absolute;
    background-color: #dadada;
    border-radius: 10px; 
}
.addPic{
  width:68rpx;
  height: 68rpx;
  position: relative;
  top:50%;
  left: 50%;
  margin:-34rpx 0 0 -34rpx; 
}
.id-card-top text,.id-card-bottom text{
  text-align: center;
  display: block;
  position: relative;
  top: 70rpx;
}
.addTextBox{
  width: 496rpx;
  height: 50rpx;
	border-radius: 6rpx;
  border: solid 2rpx #dadada;
  margin: auto;
  text-align: center;
  margin-bottom: 12rpx;
  font-size: 24rpx;
  color: #a2a2a2;
}
.area_select {
	width: 100%;
	display: block;
}
.a-more-pic{
  text-align: center;
  font-size:28rpx;
  color: #151515;
  margin:20rpx 0 39rpx;
}
/*点击上传身份证部分 e*/
.file-inner{
  position: relative;
}
.file-btn{
  width: 500rpx;
  height: 66rpx;
  border-radius: 10rpx;
  background:#dadada;

}
.f-plus-{
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
  position: absolute;
  top:18rpx;
  bottom: 0;
  left: 50%;
  margin-left: -11.5rpx;
}