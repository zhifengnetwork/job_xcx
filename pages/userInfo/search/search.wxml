<!--pages/userInfo/search.wxml-->
<view class='search-wrap'>

  <view class='g-header-'>
    <view class='-header-cont'>
      <view class='search-cont'>
        <input type='text' class='search'  placeholder="输入所要查找的内容" bindinput='selecKeyWord' />
        <image class="search-icon" src='../../../static/images/public/search_icon.png'></image>
      </view>
      <text class='login_tab' bindtap='searchInfp'>搜索</text>
    </view>
    <view class='subtitle overH'>
        <text bindtap='changStatus' class="{{cStatus==0?'stss-active':''}}" data-status="0">公司</text>
        <text bindtap='changStatus' class="{{cStatus==1?'stss-active':''}}" data-status="1">第三方</text>
    </view>
  </view>


  <view class='inner inner-cont'>
      <view wx:if="{{cStatus==0}}">
          <navigator url="../postionDetail/postionDetail?id={{item.id}}" class='c-l-info' wx:for="{{list.recruit}}">
              <image src='{{item.logo}}'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>{{item.title}}</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>{{item.salary}}K</text>
                  <text class='c-msg2'>{{item.work_age}} 年</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>公司</text>
                  <view class='company-status'>
                      <view class='company-status'>{{item.regtype == 0 ? "无需证书":"需要证书"}}</view>
                  </view>
              </view>
          </navigator>
      </view>

      <view wx:if="{{cStatus==1}}">
          <navigator url="../postionDetail/postionDetail?id={{item.id}}" class='c-l-info' wx:for="{{list.person}}">
              <image src='{{item.logo}}'class="c-logo" />
              <view class='c-info-text'>
                <text class='c-info-title'>{{item.title}}</text>
                <view class='c-info-msg'>
                  <text class='c-msg'>{{item.salary}}K</text>
                  <text class='c-msg2'>{{item.work_age}} 年</text>
                </view>
              </view>
              <!-- company info start -->
              <view class='company-info'>
                  <text>第三方</text>
                  <view class='company-status'>
                      <view class='company-status'>{{item.regtype == 0 ? "无需证书":"需要证书"}}</view>
                  </view>
              </view>
          </navigator>
      </view>
  </view>

</view>
