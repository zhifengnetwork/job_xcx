/* Gold Deposits START */
@import "../template/common";
.g-deposits-a{
  width: 702rpx;
  padding:45rpx 0;
  text-align: center;
  position: relative;
  color: #fff;
  border-radius: 6rpx;
  font-size: 26rpx;
  font-weight:600;
}
.transaction-btn{
  position: absolute;
  right: 0;
  z-index: 100;
  color: #151515;
  padding: 10rpx 14rpx 10rpx 18rpx;
  background:#fff;
  font-size: 24rpx;
  border-top-left-radius:30rpx;
  border-bottom-left-radius:30rpx;
}
.g-deposits-a .d-gold-icon{
  position: absolute;
  right: 0;
  top: 0;
  width: 190rpx;
  height: 190rpx;
}
.g-deposits-money{
  margin-top: 18rpx;
  font-size: 36rpx;
  font-weight:600;
}
/* BUTTON START */
.g-deposits-btn1{
  overflow: hidden;
  margin-top: 24rpx;
  padding: 0 30rpx;
}
.g-deposits-btn1 button{
  border-radius: 40rpx;
  width:200rpx;
  height: 66rpx;
  line-height: 67rpx;
  font-size: 30rpx;
  margin-bottom: 40rpx;
  box-sizing: border-box;
}
.g-deposits-btn1 .g-d-btn1{
  float: left;

}
.g-deposits-btn1 .g-d-btn2{
  color:#ff54b5;
  float: right;
  border:2rpx solid #ff54b5;
}

.g-deposits-b .d-gold-icon{
   width: 118rpx;
   height: 108rpx;
}
.g-deposits-btn1 .g-d-active,.g-deposits-btn2 .g-d-active{
  color: #fff;
  background:#ff54b5;
}
.kt-jh{
  text-align: center;
  margin: 60rpx 0 30rpx;
  font-size: 30rpx;
  color: red;
  letter-spacing: 4rpx;
}

.g-deposits-btn2{
  display: flex;
  justify-content: space-between;
  margin-top: 24rpx;
}
.g-deposits-btn2 button{
  width:122rpx;
  height: 55rpx;
  line-height: 55rpx;
  border-radius: 40rpx;
  background:#fff;
  border:2rpx solid #ff54b5;
  color: #ff54b5;
  font-size:30rpx;
  box-sizing: border-box;
}
.foot-info{
  position: fixed;
  bottom: 35rpx;
  left:24rpx;
  text-align: center;
  width:702rpx;
}
.foot-info text{
  font-size: 36rpx;
}
