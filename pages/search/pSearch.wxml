<!--pages/userInfo/search.wxml-->
<view class='search-wrap'>

  <view class='g-header-'>
    <view class='-header-cont'>
      <view class='search-cont'>
        <input type='text' class='search {{pBC1}}'  placeholder="输入所要查找的内容" bindinput='selecKeyWord' />
        <image class="search-icon" src='../../static/images/public/search_icon.png'></image>
      </view>
      <text class='login_tab' bindtap='searchInfp'>搜索</text>
    </view>
  </view>
  <view class='inner inner-cont'>
      <view class='wx-no-info' wx:if="{{isShowInfo}}">
            <image class="wx-no-icon" src='../../static/images/public/none.png'/>
            <view>暂无数据</view>
      </view>

      <view>
        <block wx:for="{{list.person}}" wx:key="index">
            <navigator url='../{{resType}}/personalDetail/personalDetail?id={{item.id}}'>
                <view class='c-l-info'>
                  <view class='search-job-list'>
                    <view class='c-info-title'>{{item.job_type}}</view>
                    <view class='c-info-msg overH'>
                          <text class='c-msg2 fl'>{{item.work_age}}年</text>
                    </view>
                    <view class='s-portrait'>
                        <image src='{{item.avatar}}' class='portrait-icon'/>
                        <text>{{item.name}}</text>
                    </view>
                    <view class='overH'></view>
                  </view>
                  <view class='company-status {{pBgC}} fr'>{{item.images == 0 ? "无证书":"有证书"}}</view>
                </view>
            </navigator>
          </block>
      </view>
  </view>
</view>
