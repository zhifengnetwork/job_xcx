<!--pages/company/jobList.wxml-->
<view id='jobWrap' class='jobWrap'>
  <view class='inner'>
    <view class='delect-btn' bindtap="deleteRecruit" data-aa="1">删除</view>
    <view class='t-height'></view>
    <view class='c-l-info' wx:for="{{recruitData}}" wx:key="key">
        <view class="group" wx:if="{{isDel}}">
          <block wx:for="{{iconSize}}" wx:key="key">
            <icon wx:if="{{isCheck}}"  data-check="{{isCheck}}" type="success" bindtap="changItemStatus" color="#be4cff" size="{{item}}"/>
            <icon  wx:else="{{ !isCheck}}" data-check="{{!isCheck}}" bindtap="changItemStatus" type="circle" color="#be4cff" size="{{item}}"/>
          </block>
        </view>
        <navigator url="../postJobPostings/postJobPostings" class='c-info-text'>
          <text class='c-info-title'>{{item.title}}</text>
          <view class='c-info-msg'>
            <text class='c-msg'>月薪{{item.salary}}</text>
            <text class='c-msg2'>{{item.work_age}}年</text>
          </view>
        </navigator>
        <!-- company info start -->
        <navigator url="../postJobPostings/postJobPostings" class='company-info company-color-'> 
            <text class='' wx:if="{{item.status === 0}}">审核中</text>
            <text class='' wx:if="{{item.status === 1}}">审核通过</text>
            <text class='' wx:if="{{item.status === 2}}">审核失败</text>   
            <icon class='iconfont icon-bianji'></icon>
        </navigator>
    </view>
