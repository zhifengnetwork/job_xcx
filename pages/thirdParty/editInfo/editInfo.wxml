					<text>热招职位</text>
					<view class='-list-pays' value="{{jobIndex}}">
						<picker value="{{jobIndex}}" range="{{hotRecruitment}}" bindchange="jobChange" range-key="cat_name">
							<view class="picker">
								{{hotRecruitment[jobIndex].cat_name}} 
								<image class='u-o-icon2' src='../../../static/images/public/right_arrow_gray.png'/>
							</view>
						</picker>
					</view>
				</view> -->

				<!-- <view class='u-o-list'>
					<text>平均薪资</text>
					<view class='-list-pays'>
						<picker value="{{paysIndex}}" range="{{averageSalary}}" bindchange="paysChange">
							<view class="picker">
								{{averageSalary[paysIndex]}} K
								<image class='u-o-icon2' src='../../../static/images/public/right_arrow_gray.png'/>
							</view>
						</picker>
					</view>
				</view> -->

				<view>
					<view class='u-o-list' bindtap='addAchievementBox'>
						<text>公司成就</text>
						<view class='user-edit-text'>
							<text class='u-o-msg'>{{achiInfo}}</text>
							<image class='u-o-icon1' src='../../../static/images/public/edit_gray.png'/>
						</view>
					</view>
					<view class='tex-wrap' wx:if="{{isAchievement}}">
						<textarea class="texa" placeholder='请输入公司成就' bindinput="saveAchievement"></textarea>
					</view>
				</view>

				<view>
					<view class='u-o-list' bindtap='addFamousPersonBox'>
						<text>名人介绍</text>
						<view class='user-edit-text'>
							<text class='u-o-msg'>{{personInfo}}</text>
							<image class='u-o-icon1' src='../../../static/images/public/edit_gray.png'/>
						</view>
					</view>
					<view class='tex-wrap' wx:if="{{isPerson}}">
						<textarea class="texa" placeholder='请输入名人介绍' bindinput="savePerson"></textarea>
					</view>
				</view>

			</view>

		</view>
	</view>

	<view>
		<textarea class="texa m-t20" placeholder='公司介绍说明' bindinput="getcompanyIntroduce" value='{{companyIntroduce}}'></textarea>		
	</view>
	

	<!--footer -->
	<view class='line-heig'></view>
	<view class='set-option-1' >
		<button class='s-1-option third-bg-' bindtap='saveEditInfo' wx:if="{{info.is_edit}}">保存</button>
		<view wx:else="" class='edit-tips'>注意：信息审核中，不可编辑</view>
	</view>

</view>
