<!--pages/userInfo/editInfo.wxml-->
<view class='inner'>
	<view class='edit-info'>
		<view class='edit-cont'>

			<view class='e-info-'>
				<text class='e-info-msg'>公司名称：</text>
				<input type='text' class='e-info-inp' placeholder-class="phcolor" placeholder='输入公司名称' bindinput="getCompanyName" value='{{companyName}}' />
			</view>

			<view class='e-info-'>
				<text class='e-info-msg'>公司类型：</text>
				<input type='text' class='e-info-inp' placeholder-class="phcolor" placeholder='输入公司类型' bindinput="getCompanyType" value='{{companyType}}'/>
			</view>

			<view class='e-info-'>
				<text class='e-info-msg'>成立时间：</text>
				<view class='e-info-pick'>
					<picker-view indicator-style="height: 50px;" class='-timer-' value="{{value}}" bindchange="yearsChang">
						<picker-view-column>
							<view wx:for="{{years}}" wx:key="{{key}}" style="line-height: 50px">{{item}}年</view>
						</picker-view-column>
						<picker-view-column>
							<view wx:for="{{months}}" wx:key="{{key}}" style="line-height: 50px">{{item}}月</view>
						</picker-view-column>
						<picker-view-column>
							<view wx:for="{{days}}" wx:key="{{key}}" style="line-height: 50px">{{item}}日</view>
						</picker-view-column>
					</picker-view>
				</view>
			</view>
		
			<view class='e-info-'>
				<text class='e-info-msg'>公司规模：</text>
				<input type='number' class='e-info-inp -inp-2' placeholder-class="phcolor" placeholder='输入公司规模' bindinput="getcompanyScale" value='{{companyScale}}' /> 人
			</view>  

			<view class="user-option">
