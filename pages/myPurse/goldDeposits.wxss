/* pages/userInfo/gold.wxss */
@import '../template/common';
.inner{
  padding: 40rpx 24rpx;
  font-size: 26rpx;
}
.gold-search{
   width: 100%;
   height:54rpx;
   border-bottom: 1px solid #fff;
   color: #717171;
}
.gold-content{
  padding:  15rpx 0;
  display: flex;
  flex-wrap: wrap
}
.gold-list{
  margin:0 20rpx 20rpx 0;
  flex: 0 0 30.7%;
  text-align: center;
  padding: 15rpx 0;
  border:2rpx solid #ff54b5;
  border-radius:6rpx;
  position: relative;
}
.gold-list:nth-child(3n){
  margin-right: 0;
}
.gold-num{
  color:#ff54b5;
  font-weight: bold;
  font-size:30rpx;
  margin-bottom: 13rpx;
}
.gold-list{
  color:#151515;
}
.gold-active-img{
  position: absolute;
  right: 0;
  bottom: 0;
  width:41rpx;
  height: 31rpx;
  /* display: none */
}
.-show-{display: block;}
/* .gold-list:hover .gold-active-img{
  display: block;
} */
.-hide{display: none}
.foot-info{
  position: fixed;
  bottom: 35rpx;
  left:24rpx;
  text-align: center;
  width:702rpx;
}
.foot-info text{
  font-size: 36rpx;

