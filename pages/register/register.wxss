/* 下拉框的样式 */
.select_box{
  background: #fff;
  margin: 50rpx 50rpx 0 50rpx;
  position: relative;
}
.select{
  box-sizing: border-box;
  width: 100%;
  height: 70rpx;
  border-bottom: 1rpx solid #ff54b5; 
  display: flex;
  align-items: center;
  padding: 0 20rpx;
}
.select_text{
  font-size: 30rpx;
  flex: 1;
}
.select_img{
  width: 40rpx;
  height: 40rpx;
  display: block;
  transition:transform 0.3s;
}
.select_img_rotate{
  transform:rotate(180deg); 
}
.option_box{
  position:absolute;
  top:70rpx;
  width:100%;
  box-sizing:border-box;
  overflow-y:auto;
  background:#fff;
  transition:height 0.3s;
  z-index:999;
  border-top:0;
  
}
.option{
  display: block;
  line-height: 60rpx;
