/* pages/register/fillInInformation/fillInInformation.wxss */
@import "../../template/common";
.content {
  padding: 0 15px;
  margin: 36rpx 24rpx;
  background: #fff;
}
.name_wrap {
  padding: 10px 0;
}
.name_wrap .text,.inp {
  display: inline-block;
  vertical-align: top;
}
.text {
  width: 20%;
  font-size: 28rpx;
  color: #151515;
  line-height: 48rpx;
  text-align: right;
}
.inp {
  padding: 0 0 10rpx;
  width: 80%;
  border-bottom: 1px solid #eee; 
}
.inp input {
  padding-left: 20rpx;
  height: 48rpx;
  font-size: 28rpx;
  line-height: 48rpx;
}
.section {
  padding-left: 20rpx;
  display: inline-block;
  vertical-align: top;
  width: 75%;
  font-size: 26rpx;
  color: #151515;
  line-height: 48rpx;
}
.u-o-icon2{
  margin-top: 15rpx;
  width: 12rpx;
  height: 24rpx;
  vertical-align: top;
}
.in_tar {
  padding: 14rpx 0 0 17rpx;
  display: inline-block;
  width: 75%;
  height: 209rpx;
  border: 1px solid #eee;
  border-radius: 6px;
  font-size: 28rpx;
  color: #a2a2a2;
}
/*点击上传身份证部分 s*/
.idPic{
  width: 100%;
  height: auto;
  font-size:28rpx;
  color: #151515;
}
.-pic-subtitle{
  margin: 20rpx 0 28rpx;
  text-align: center;
}
.-pic-stat{
  width: 17rpx;
  height: 21rpx;
}
.id-card-top,.id-card-bottom{
  width:500rpx;
  height: 260rpx;
  margin: 30rpx auto;
  position: relative;
  background:#dadada;
}
.id-card-top image:first-child,
.id-card-bottom image:first-child{
    width:500rpx;
    height: 260rpx;
    position: absolute;

}
.addPic{
  width:68rpx;
  height: 68rpx;
  position: relative;
  top: 50rpx;
  left: 50%;
  margin-left:-34rpx;
}
.pic {
  width:68rpx;
  height: 68rpx;
  position: relative;
  top: 100rpx;
  left: 50%;
  margin-left:-34rpx;
}
.id-card-top text,.id-card-bottom text{
  text-align: center;
  display: block;
  position: relative;
  top: 70rpx;
}

.area_select {
	width: 100%;
	display: block;
}
.a-more-pic{
  text-align: center;
  font-size:28rpx;
  color: #151515;
  margin:20rpx 0 39rpx;
}
/*点击上传身份证部分 e*/
.file-inner{
  position: relative;
}
.file-btn{
  width: 500rpx;
  height: 66rpx;
  border-radius: 10rpx;
  background:#dadada;

}
.f-plus-{
  width: 33rpx;
  height: 33rpx;
  vertical-align: middle;
  position: absolute;
  top:18rpx;
  bottom: 0;
  left: 50%;
  margin-left: -11.5rpx;
}
.option {
  margin: 20rpx auto 65rpx;
  width: 670rpx;
  height: 88rpx;
  background: #25bbb3;
  color: #fff;
  letter-spacing: 2px;
  border-radius: 45px;
  line-height: 88rpx;
}
button {
  padding: 0;
}