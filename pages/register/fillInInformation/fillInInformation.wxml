<view class='wrapper'>
  <view class='content'>
    <!-- 联系人 -->
    <view class='name_wrap'>
      <text class='text'>联系人:</text>
      <view class='inp'>
        <input placeholder='输入名字'></input>
      </view>
    </view>
    <!-- 手机号 -->
    <view class='name_wrap'>
      <text class='text'>手机号:</text>
      <view class='inp'>
        <input placeholder='输入手机号'></input>
      </view>
    </view>
    <!-- 固定电话 -->
    <view class='name_wrap'>
      <text class='text'>固定电话:</text>
      <view class='inp'>
        <input placeholder='输入固定电话号码'></input>
      </view>
    </view>
    <!-- 选择公司地区 -->
    <view class='name_wrap'>
      <text class='text'>公司地区:</text>
      <view class="section">
        <picker mode="region" bindchange="bindRegionChange" value="{{region}}" custom-item="{{customItem}}">
          <view class="picker">
            {{region[0]}}，{{region[1]}}，{{region[2]}}
          </view>
        </picker>
      </view>
      <image class='u-o-icon2' src='../../../static/images/public/right_arrow_gray.png'/>
    </view>
    <!-- 公司名称 -->
    <view class='name_wrap'>
      <text class='text'>公司名称:</text>
      <view class='inp'>
        <input placeholder='输入公司名称'></input>
      </view>
    </view>
    <!-- 公司类型 -->
    <view class='name_wrap'>
      <text class='text'>公司类型:</text>
      <view class='inp'>
        <input placeholder='例如：国企'></input>
      </view>
    </view>
    <!-- 公司介绍 -->
    <view class='name_wrap'>
      <text class='text'>公司介绍:</text>
      <textarea class='in_tar' placeholder=' 至少10字介绍公司'></textarea>
    </view>
    <view class='license_name'>
      <text>*</text>上传营业执照（必填）
    </view>
    
    <view class='fg'>

    </view>
  </view>
  <!-- <view class='set-option'>提交</view> -->
</view>
