
<view class='inner'>
  <view class='name_ear'>
    <text class="name_text">姓名:</text>
    <input placeholder='请输入名字' class='name_input'></input>
  </view>
  <view class='name_ear'>
    <text class="name_text">手机号:</text>
    <input placeholder='输入手机号' class='name_input'></input>
  </view>
  <view class='name_ear'>
    <text class="name_text">性别:</text>
      <view class='e-info-radio'>
        <radio-group class="radio-group" bindchange="radioChange">
            <label class="radio" wx:for="{{radioItems}}">
              <radio style="zoom:.6" color="#25bbb3" value="{{item.name}}" checked="{{item.checked}}"/>{{item.value}}
            </label>
        </radio-group>
      </view>

    <!-- <view class='man'>
      <text class="man_xuan"></text>
    </view>
    <text class="mail">女</text>
    <view class='man'>
      <text class="man_xuan"></text>
    </view>
    <text class="femail">男</text> -->
  </view>
  <!-- 日期选择 -->
  <view class='name_ear'>
    <text class="name_text chusheng">出生日期:</text>
    <view class='picker-wrap'>
      <view class="section">
        <picker mode="date" value="{{date}}" start="" 
         bindchange="picketchang">
          <view class="picker">{{date}}</view>
        </picker>
      </view>
      <image class="down-arrow" src='../../static/images/public/right_arrow_gray.png'/>
    </view>
  </view>
  <view class='name_ear'>
    <text class="name_text">毕业学校:</text>
    <input placeholder='输入毕业院校' class='name_input'></input>
  </view>
  <!-- 毕业时间 -->
  <view class='name_ear'>
    <text class="name_text chusheng">毕业时间:</text>
    <view class='picker-wrap'>
      <!-- <view>{{year}}年{{month}}月{{day}}日</view>  选择的年月日的值-->
      <!-- <picker-view indicator-style="height: 50px;" class='dd' value="{{value}}" bindchange="bindChange">
