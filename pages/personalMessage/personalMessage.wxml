        <text>点击上传证照</text>
      </view>
    </view> -->
    <!-- -->
    <view wx:for="{{pics}}">
      <view class='id-card-top'>
        <image src='{{item}}' data-src="{{item}}"></image>
      </view>
    </view>
    <view class='file-inner' bindtap='chooseImage'>
      <button bindtap='addNewPic' class='file-btn'></button> 
      <image class='f-plus-' src='../../static/images/public/plus.png'/>
    </view>
  </view>
  <view class='a-more-pic' >添加一张</view>
  <button class='s-1-option' bindtap="saveInfo">确认保存</button>
</view>